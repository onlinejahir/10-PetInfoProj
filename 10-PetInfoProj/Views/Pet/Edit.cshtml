@model PetEditViewModel

@{
    ViewData["Title"] = "Update pet";
}

<div class="container">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">
            @ViewBag.Message
        </div>
    }     
    <div class="row p-3">
        <div class="col-md-12">
            <h3>Update Pet</h3>
        </div>
    </div>
    <div class="row p-3">
        <div class="col-md-6">
            <form asp-controller="Pet" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PetId" />
                <div class="form-group mb-3">
                    <label asp-for="PetName" class="form-label fw-bold"></label>
                    <input asp-for="PetName" class="form-control" />
                    <span asp-validation-for="PetName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Age" class="form-label fw-bold"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Color" class="form-label fw-bold"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Gender" class="form-label fw-bold"></label>
                    <br />
                    <input type="radio" asp-for="Gender" value="Male" /> Male |
                    <input type="radio" asp-for="Gender" value="Female" /> Female |
                    <input type="radio" asp-for="Gender" value="Undefined" /> Undefined
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="OwnerName" class="form-label fw-bold"></label>
                    <input asp-for="OwnerName" class="form-control" />
                    <span asp-validation-for="OwnerName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="AnimalTypeId" class="form-label fw-bold"></label>
                    <select asp-for="AnimalTypeId" class="form-control" asp-items="ViewBag.AnimalTypes">
                        <option value="">--Select--</option>
                    </select>
                    <span asp-validation-for="AnimalTypeId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Address" class="form-label fw-bold"></label>
                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ImageFile" class="form-label fw-bold"></label>
                    <input asp-for="ImageFile" class="form-control" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group mb-5">
                    <label asp-for="ImageName" class="form-label fw-bold">Current Image:</label>
                    <input asp-for="ImageName" class="form-control" value="@Model.ImageName" disabled /><br />                     
                    <img src="@("~/images/" + Model.ImageName)" asp-append-version="true" style="max-width:100px;" />
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Update" class="btn btn-primary w-50" />
                </div>
            </form>
        </div>
    </div>

    <div class="row p-3">
        <div class="col-md-6">
            <a asp-controller="Pet" asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
